{
  "name": "pokemon-mern-app",
  "version": "1.0.0",
  "description": "A MERN stack application for searching and displaying PokÃ©mon information using the PokeAPI.",
  "main": "start.js",
  "scripts": {
    "start": "node start.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "server:windows": "cd server && npm run dev:windows",
    "client": "cd client && npm start",
    "client:windows": "cd client && npm run start:windows",
    "build": "cd client && npm run build",
    "build:windows": "cd client && npm run build:windows",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "heroku-postbuild": "npm run install-all && npm run build",
    "render-postbuild": "npm run install-all && npm run build"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {},
  "author": "Priya",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/PRIYA1102S/pokemon-mern-app.git"
  }
}
